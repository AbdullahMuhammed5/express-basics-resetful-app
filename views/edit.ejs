<% include partials\header.ejs %>

<div class="ui main text container segment">
    <h1 class="ui huge header">Edit Post</h1>
    <form action="/blogs/<%=blog._id %>?_method=PUT" method="POST" class="ui form">
        <input type="text" name="blog[title]" placeholder="Name" class="field" value="<%= blog.title %>">
        <input type="text" name="blog[image]" placeholder="Image Url" class="field" value="<%= blog.image %>">
        <textarea name="blog[body]" id=""
        placeholder="Add a description"
        class="field"><%= blog.body %></textarea>
        <button type="submit" class="ui button">Save</button>
    </form>
</div>


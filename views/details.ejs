<% include partials\header %>

<div class="ui main text container segment">
    <h1 class="ui huge header"><%= blog.title%></h1>

    <div class="ui top attached">
        <div class="item">
            <div class="image">
                <img src="<%= blog.image %>" class="ui centered rounded image">
            </div>
            <div class="content">
                <span><%=blog.created_at.toDateString()%></span>
                <p><%= blog.body %></p>
            </div>
            <button class="ui button"><a href="/blogs/<%= blog._id %>/edit">Edit <i class="edit icon"></i></a></button>
            <form id="delete"action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="ui form">
                <button class="ui red button" type="submit">Delete <i class="trash alternate icon"></i></button>
            </form>
        </div>
    </div>
</div>

<% include partials\footer %>
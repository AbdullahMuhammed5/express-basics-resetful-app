<% include partials\header %>

<div class="ui main text container segment">
    <h1 class="ui huge header"><%= blog.title%></h1>

    <div class="ui top attached">
        <div class="item">
            <div class="image">
                <img src="<%= blog.image %>" class="ui centered rounded image">
            </div>
            <div class="content">
                <span><%=blog.created_at.toDateString()%></span>
                <p><%= blog.body %></p>
            </div>
            <button class="ui button"><a href="/blogs/<%= blog._id %>/edit">Edit</a></button>
        </div>
    </div>
</div>

<% include partials\footer %>
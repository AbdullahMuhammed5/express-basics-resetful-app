<% include ./partials/header %>

<h1>Blog Page</h1>

<% blogs.forEach( function(element, index) { %>
    <div class="">
        <img src="<%= element.image%>" class="figure-img img-fluid">
        <h1 class="figure-caption text-center"><%= element.title %></h1>
        <p><%= element.body.substring(0, 100)+"..." %></p>
        <a href="/blogs/<%=element._id%>">Read More</a>
    </div>
<% }) %>

<a href="/blogs/new">Ctaete new blog</a>

<% include ./partials/footer %>